<UserControl x:Class="GitGameGUI.RepoUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GitGameGUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="500">
	<Grid Background="DarkGray">
		<Button x:Name="cloneButton" Content="Clone" HorizontalAlignment="Left" Margin="135,10,0,0" VerticalAlignment="Top" Width="75" Click="cloneButton_Click"/>
		<Button x:Name="createButton" Content="Create" HorizontalAlignment="Left" Margin="10,38,0,0" VerticalAlignment="Top" Width="75" Click="createButton_Click"/>
		<TextBox x:Name="repoPathTextBox" HorizontalAlignment="Left" Height="23" Margin="10,10,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
		<CheckBox x:Name="gitLFSSupportCheckBox" Content="Validate LFS Support" HorizontalAlignment="Left" Margin="10,76,0,0" VerticalAlignment="Top" Checked="gitLFSSupportCheckBox_Checked" Unchecked="gitLFSSupportCheckBox_Checked"/>
		<CheckBox x:Name="gitignoreExistsCheckBox" Content="Validate .gitignore file exists" HorizontalAlignment="Left" Margin="10,96,0,0" VerticalAlignment="Top" Checked="gitignoreExistsCheckBox_Checked" Unchecked="gitignoreExistsCheckBox_Checked"/>
		<CheckBox x:Name="autoCommitMergeCheckBox" Content="Auto Commit Successful Merge" HorizontalAlignment="Left" Margin="10,116,0,0" VerticalAlignment="Top" Checked="autoCommitMergeCheckBox_Checked" Unchecked="autoCommitMergeCheckBox_Checked"/>
		<CheckBox x:Name="autoPushRemoteMergeCheckBox" Content="Auto Push Successful Remote Merge" HorizontalAlignment="Left" Margin="10,136,0,0" VerticalAlignment="Top" Checked="autoPushRemoteMergeCheckBox_Checked" Unchecked="autoPushRemoteMergeCheckBox_Checked"/>
		<ComboBox x:Name="activeRepoComboBox" HorizontalAlignment="Left" Margin="361,41,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="activeRepoComboBox_SelectionChanged"/>
		<Label x:Name="label" Content="Active Repository" HorizontalAlignment="Left" Margin="361,10,0,0" VerticalAlignment="Top"/>
		<Button x:Name="openRepoButton" Content="Open Repository" HorizontalAlignment="Left" Margin="361,68,0,0" VerticalAlignment="Top" Width="120" Click="openRepoButton_Click"/>
		<Button x:Name="clearRepoListButton" Content="Clear Repo List" HorizontalAlignment="Left" Margin="361,93,0,0" VerticalAlignment="Top" Width="120" Click="clearRepoListButton_Click"/>
		<TextBox x:Name="sigNameTextBox" HorizontalAlignment="Left" Height="23" Margin="10,156,0,0" TextWrapping="Wrap" Text="sig name" VerticalAlignment="Top" Width="186" TextChanged="sigNameTextBox_TextChanged"/>
		<TextBox x:Name="sigEmailTextBox" HorizontalAlignment="Left" Height="23" Margin="10,184,0,0" TextWrapping="Wrap" Text="sig email" VerticalAlignment="Top" Width="186" TextChanged="sigEmailTextBox_TextChanged"/>
		<TextBox x:Name="usernameTextBox" HorizontalAlignment="Left" Height="23" Margin="10,212,0,0" TextWrapping="Wrap" Text="username" VerticalAlignment="Top" Width="186" TextChanged="usernameTextBox_TextChanged"/>
		<TextBox x:Name="passTextBox" HorizontalAlignment="Left" Height="23" Margin="10,240,0,0" TextWrapping="Wrap" Text="pass" VerticalAlignment="Top" Width="186" TextChanged="passTextBox_TextChanged"/>
		<ComboBox x:Name="mergeDiffToolComboBox" HorizontalAlignment="Left" Margin="370,185,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="mergeDiffToolComboBox_SelectionChanged">
			<ComboBoxItem>Meld</ComboBoxItem>
			<ComboBoxItem>kDiff3</ComboBoxItem>
			<ComboBoxItem>P4Merge</ComboBoxItem>
			<ComboBoxItem>DiffMerge</ComboBoxItem>
		</ComboBox>
		<Label Content="Merge Diff Tool" HorizontalAlignment="Left" Margin="370,156,0,0" VerticalAlignment="Top" Width="120"/>
		<Button x:Name="addGitLFSExtButton" Content="Add Ext" HorizontalAlignment="Left" Margin="245,240,0,0" VerticalAlignment="Top" Width="120" Click="addGitLFSExtButton_Click"/>
		<Button x:Name="addGitLFSButton" Content="Add Git-LFS" HorizontalAlignment="Left" Margin="370,215,0,0" VerticalAlignment="Top" Width="120" Click="addGitLFSButton_Click"/>
		<Button x:Name="removeGitLFSButton" Content="Remove Git-LFS" HorizontalAlignment="Left" Margin="370,240,0,0" VerticalAlignment="Top" Width="120" Click="removeGitLFSButton_Click"/>
		<TextBox x:Name="gitLFSExtTextBox" HorizontalAlignment="Left" Height="23" Margin="245,212,0,0" TextWrapping="Wrap" Text=".ext" VerticalAlignment="Top" Width="120"/>
	</Grid>
</UserControl>
