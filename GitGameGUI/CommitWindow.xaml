<Window x:Class="GitGameGUI.CommitWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GitGameGUI"
        mc:Ignorable="d"
		WindowStartupLocation="CenterOwner" WindowStyle="ToolWindow"
        Title="Commit Message" Height="200" Width="300">
	<Grid Background="DarkGray">
		<TextBox x:Name="messageTextBox" Margin="10,10,10,35" TextWrapping="Wrap" Text=""/>
		<Button x:Name="cancelButton" Content="Cancel" HorizontalAlignment="Left" Margin="10,0,0,10" VerticalAlignment="Bottom" Width="75" Click="cancelButton_Click"/>
		<Button x:Name="okButton" Content="Commit" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="75" Click="commitButton_Click"/>

	</Grid>
</Window>
