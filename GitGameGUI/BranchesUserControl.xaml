<UserControl x:Class="GitGUI.BranchesUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GitGUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="500">
    <Grid Background="DarkGray">
		<ComboBox x:Name="workingBranchComboBox" HorizontalAlignment="Left" Margin="10,36,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="workingBranchComboBox_SelectionChanged"/>
		<ComboBox x:Name="mergingSourceBranchComboBox" HorizontalAlignment="Right" Margin="0,44,10,0" VerticalAlignment="Top" Width="120"/>
		<Button x:Name="mergeButton" Content="Merge Source into Active" HorizontalAlignment="Center" Margin="168,44,154,0" VerticalAlignment="Top" Width="169" Click="mergeButton_Click"/>
		<Label Content="Active Local Branch" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
		<Label Content="Merging Branch Source" HorizontalAlignment="Right" Margin="0,13,10,0" VerticalAlignment="Top"/>
	</Grid>
</UserControl>
