<Window x:Class="GitGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GitGUI"
		xmlns:self="clr-namespace:GitGUI"
        mc:Ignorable="d"
        Title="Git-Game-GUI" Height="398" Width="525" WindowStartupLocation="CenterScreen">

	<Grid>
		<TabControl x:Name="tabControl" HorizontalAlignment="Left" Height="347" Margin="10,10,0,0" VerticalAlignment="Top" Width="497">
			<TabItem Header="Changes">
				<self:ChangesUserControl/>
			</TabItem>

			<TabItem Header="Branches">
				<self:BranchesUserControl/>
			</TabItem>

			<TabItem Header="History">
				<self:HistoryUserControl/>
			</TabItem>

			<TabItem Header="Repository">
				<self:RepoUserControl/>
			</TabItem>
		</TabControl>
	</Grid>
</Window>
