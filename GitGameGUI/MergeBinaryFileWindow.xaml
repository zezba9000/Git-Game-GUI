<Window x:Class="GitGameGUI.MergeBinaryFileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GitGameGUI"
        mc:Ignorable="d"
		WindowStyle="ToolWindow"
        Title="Merge Binary File" Width="395" Height="123" WindowStartupLocation="CenterOwner">
	<Grid>
		<Button x:Name="keepMineButton" Content="Keep Mine" HorizontalAlignment="Left" Margin="10,0,0,10" VerticalAlignment="Bottom" Width="75" Click="keepMineButton_Click"/>
		<Button x:Name="useTheirsButton" Content="Use Theirs" HorizontalAlignment="Right" Margin="0,0,12,10" VerticalAlignment="Bottom" Width="75" Click="useTheirsButton_Click"/>
		<TextBox x:Name="fileInConflictTextBox" Height="23" Margin="10,10,12,0" TextWrapping="Wrap" Text="File in Question..." IsReadOnly="True" VerticalAlignment="Top"/>
		<Button x:Name="cancelButton" Content="Cancel" Margin="90,0,92,10" VerticalAlignment="Bottom" HorizontalAlignment="Center" Width="205" Click="cancelButton_Click"/>
	</Grid>
</Window>
